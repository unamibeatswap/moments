/* Admin Dashboard Header Refactor - Progressive Enhancement */

/* Header Structure: Branding | User Controls | Navigation */
.admin-header {
    background: #2563eb;
    color: white;
    padding: 0;
    margin-bottom: 1.5rem;
    position: sticky;
    top: 0;
    z-index: 100;
}

.admin-header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* Three-section layout */
.admin-header-top {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1rem 0;
    gap: 1rem;
}

.admin-branding {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-branding h1 {
    font-size: 1.25rem;
    margin: 0;
    font-weight: 600;
}

.admin-branding img {
    height: 28px;
    width: auto;
}

.admin-user-controls {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-self: end;
}

.admin-user-info {
    font-size: 0.75rem;
    opacity: 0.9;
    text-align: right;
    line-height: 1.2;
}

.admin-user-role {
    font-size: 0.65rem;
    opacity: 0.7;
    display: block;
}

/* Navigation with horizontal scroll */
.admin-nav-container {
    border-top: 1px solid rgba(255,255,255,0.2);
    padding: 0.75rem 0;
}

.admin-nav {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 2px;
}

.admin-nav::-webkit-scrollbar {
    display: none;
}

.admin-nav-item {
    background: rgba(255,255,255,0.1);
    border: none;
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.2s;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    min-width: fit-content;
}

.admin-nav-item:hover {
    background: rgba(255,255,255,0.2);
}

.admin-nav-item.active {
    background: rgba(255,255,255,0.25);
    font-weight: 500;
}

/* Icon components instead of emojis */
