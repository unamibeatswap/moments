/* Mobile responsive - Enhanced */
@media (max-width: 768px) {
    .admin-header-top {
        grid-template-columns: 1fr;
        gap: 0.75rem;
        text-align: center;
        padding: 0.75rem 0;
    }
    
    .admin-user-controls {
        justify-self: center;
        order: -1;
    }
    
    .admin-branding {
        justify-self: center;
    }
    
    .admin-branding h1 {
        font-size: 1rem;
    }
    
    .admin-nav {
        gap: 0.25rem;
        padding-bottom: 4px;
    }
    
    .admin-nav-item {
        padding: 0.4rem 0.6rem;
        font-size: 0.8rem;
    }
    
    /* Hide text labels on mobile, show icons only */
    .admin-nav-item span:not(.icon) {
        display: none;
    }
    
    .icon {
        width: 16px;
        height: 16px;
    }
}

@media (max-width: 480px) {
    .admin-header-container {
        padding: 0 0.5rem;
    }
    
    .admin-nav-item {
        padding: 0.35rem 0.5rem;
        font-size: 0.75rem;
    }
    
    .icon {
        width: 14px;
        height: 14px;
    }
    
    .admin-branding h1 {
        font-size: 0.9rem;
    }
    
    .admin-branding img {
        height: 24px;
    }
}