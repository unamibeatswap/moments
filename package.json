{
  "name": "whatsapp-community-gateway",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "start:minimal": "node src/minimal-server.js",
    "dev": "node --watch src/server.js",
    "dev:next": "next dev",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:smoke": "node tests/smoke-tests.js",
    "test:admin": "./test-admin-complete.sh",
    "test:all": "npm run test && npm run test:smoke",
    "test:pwa": "echo 'âœ… Server running on port 8080. Use Codespaces port forwarding to test PWA features.' && echo 'See PWA_CODESPACES.md for testing guide.'",
    "build": "next build || echo 'Next build skipped'",
    "build:legacy": "echo 'Build complete - Vercel serverless functions ready'",
    "vercel-build": "echo 'Vercel build complete - serverless functions ready'",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up",
    "setup:storage": "node scripts/create_storage_bucket.js",
    "apply:rbac": "bash scripts/apply_rbac.sh",
    "seed:superadmin": "bash scripts/seed_superadmin.sh"
  },
  "dependencies": {
    "@sentry/node": "^7.26.0",
